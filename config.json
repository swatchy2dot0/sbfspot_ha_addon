{
  "name": "SBFspot Addon",
  "version": "0.0.1",
  "slug": "sbfspot_ha_addon",
  "description": "Manage SBFspot with a simple interface",
  "url": "https://github.com/HABuild/SBFspot_HA_addon",
  "webui": "http://[HOST]:[PORT:81]",
  "init": false,
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "services": [
    "mysql: want",
    "mqtt: want",
    ],
  "hassio_api": true,
  "hassio_role": "manager",
  "homeassistant_api": true,
  "host_network": true,
  "auth_api": true,
  
  "devices": [
    "/dev/usb"
  ],
  "map": [
    "addons:rw",
    "ssl:rw",
    "backup:rw"
  ],
  "schema": {
    "log_level": "list(trace|debug|info|notice|warning|error|fatal)?",
    "reset_database": "bool?"
  },
  "image": "ghcr.io/HABuild/SBFspot_HA_addon/{arch}"
}
